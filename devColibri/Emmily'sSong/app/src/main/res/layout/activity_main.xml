<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <ImageView android:id="@+id/morrowindImage"
               android:src="@drawable/morrowind"
               android:layout_width="wrap_content"
               android:layout_height="270dp"
               android:scaleType="fitXY"
               android:contentDescription="@string/morrowind"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"/>

    <ScrollView android:id="@+id/morrowindScroll"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@id/morrowindImage">

        <TextView android:id="@+id/textView"
                  android:text="@string/lyrics"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/lyricsText"/>

    </ScrollView>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tabulatura"
            android:onClick="openFB"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textSong"
            android:onClick="openFB"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/button"
            android:layout_alignRight="@+id/morrowindScroll"
            android:layout_alignEnd="@+id/morrowindScroll"/>
</RelativeLayout>
