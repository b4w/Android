<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <fragment android:name="com.mysuperfragment.app.ButtonFragment"
              android:id="@+id/button_fragment"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              tools:layout="@layout/button_layout"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_marginRight="320dp"/>

    <fragment android:name="com.mysuperfragment.app.ImageFragment"
              android:id="@+id/image_fragment"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              tools:layout="@layout/image_layout"
              android:layout_marginLeft="286dp"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"/>

</RelativeLayout>