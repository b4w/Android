<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.climbtraining.app.activity.WorkoutActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/exercise"
            android:id="@+id/tvWorkoutName"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etWorkoutName"
            android:layout_alignBottom="@+id/tvWorkoutName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignLeft="@+id/etWorkoutComments"
            android:layout_alignStart="@+id/etWorkoutComments"
            android:inputType="text"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/comments"
            android:id="@+id/tvComments"
            android:layout_below="@+id/tvWorkoutName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etWorkoutComments"
            android:layout_alignBottom="@+id/tvComments"
            android:layout_toRightOf="@+id/tvComments"
            android:layout_toEndOf="@+id/tvComments"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addWorkout"
            android:id="@+id/btnWorkoutAdd"
            android:layout_below="@+id/tvComments"
            android:layout_toLeftOf="@+id/etWorkoutComments"
            android:layout_toStartOf="@+id/etWorkoutComments"
            android:layout_marginTop="39dp"
            android:onClick="addNewWorkout"
            android:nestedScrollingEnabled="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            android:id="@+id/btnWorkoutClear"
            android:layout_alignBottom="@+id/btnWorkoutAdd"
            android:layout_centerHorizontal="true"
            android:onClick="clearFields"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:onClick="cancel"
            android:id="@+id/btnWorkoutCancel"
            android:layout_alignBottom="@+id/btnWorkoutClear"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
</RelativeLayout>
