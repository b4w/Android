<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/text_icon">

    <include
        android:id="@+id/edit_entities_layout_toolbar"
        layout="@layout/toolbar" />

    <FrameLayout
        android:id="@+id/edit_entities_container_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <FrameLayout
        android:id="@+id/edit_entities_container_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/edit_entities_container_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>