<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/fragment_trainings_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fragment_trainings_actions_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        fab:fab_addButtonColorNormal="@color/accent_color"
        fab:fab_addButtonColorPressed="@color/light_accent_color"
        fab:fab_addButtonPlusIconColor="@color/text_icon"
        fab:fab_labelStyle="@style/menu_label_style"/>

</RelativeLayout>