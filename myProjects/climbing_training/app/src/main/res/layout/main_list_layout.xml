<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_list_layout_logo"
        android:layout_width="130dp"
        android:layout_height="130dp"/>

    <TextView
        android:id="@+id/main_list_layout_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/main_list_layout_logo"
        android:layout_toRightOf="@+id/main_list_layout_logo"/>

    <TextView
        android:id="@+id/main_list_layout_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/main_list_layout_title"
        android:layout_toEndOf="@+id/main_list_layout_logo"
        android:layout_toRightOf="@+id/main_list_layout_logo"/>

</RelativeLayout>