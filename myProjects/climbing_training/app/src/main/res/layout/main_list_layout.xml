<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_list_layout_logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/button_material_light" />

    <LinearLayout
        android:id="@+id/main_list_layout_linear"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="@color/bright_foreground_inverse_material_dark"
        android:layout_alignTop="@+id/main_list_layout_logo"
        android:layout_toRightOf="@+id/main_list_layout_logo"
        android:layout_toEndOf="@+id/main_list_layout_logo">

        <TextView
            android:id="@+id/main_list_layout_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/accent_material_light"
            android:text="Title" />

        <TextView
            android:id="@+id/main_list_layout_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Text"
            android:background="@color/primary_dark_material_light"/>

    </LinearLayout>
</RelativeLayout>